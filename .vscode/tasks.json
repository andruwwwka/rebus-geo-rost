{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pip install",
            "type": "shell",
            "command": "pip install -Ur ./requirements.txt"
        },
        {
            "label": "migrate",
            "type": "shell",
            "command": "python manage.py migrate",
            "dependsOn": [
                "pip install"
            ]
        },
        {
            "label": "application launch",
            "dependsOn": [
                "pip install",
                "migrate"
            ]
        }
    ]
}